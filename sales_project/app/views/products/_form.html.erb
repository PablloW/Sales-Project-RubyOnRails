<%= form_with(model: product, local: true, :html => {:multipart => true }) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :supplier_id %>
    <%= form.select("supplier_id", Supplier.all.pluck(:description, :id), {inclue_blank: 'Selecione...' }) %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.select("category_id", Category.all.pluck(:description, :id), {inclue_blank: 'Selecione...' }) %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :quantity_per_unit %>
    <%= form.number_field :quantity_per_unit %>
  </div>

  <div class="field">
    <%= form.label :unit_price %>
    <%= form.text_field :unit_price %>
  </div>
  
  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
